<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="student_fees_template">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="doc.name"/>
                        </h2>
<!--                        <div>-->
<!--                            <strong>Monthly Fees: </strong>-->
<!--                            <span t-field="property.amount"/>-->
<!--                        </div>-->
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Amount</th>
                                    <th>Deduction</th>
                                    <th>Due</th>
                                    <th>Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
<!--                                <t t-set="offers" t-value="property.mapped('offer_ids')"/>-->
                                <tr t-foreach="doc.fee_ids" t-as="fee">
                                    <td><t t-esc="fee.amount" /></td>
                                    <td><t t-esc="fee.deduction" /></td>
                                    <td><t t-esc="fee.due" /></td>
                                    <td><t t-esc="fee.total_amount" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>