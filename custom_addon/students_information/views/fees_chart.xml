<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <!--Search View-->
    <record model="ir.ui.view" id="view_students_fees_chart">
        <field name="name">student.fees.search</field>
        <field name="model">students_fees</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_name" filter_domain="['|', '|', '|', ('student_name', 'ilike', self), ('Class', 'ilike', self), ('roll', 'ilike', self), ('shift', 'ilike', self)]"/>
                <field name="shift"/>
                <field name="Class"/>
                <field name="section"/>
                <field name="roll"/>
                <field name="submit_date"/>
                <field name="amount"/>
                <field name="deduction"/>
                <field name="total_amount"/>
                <field name="due"/>
                <field name="exam_fee"/>
                <field name="auditorium_fee"/>
                <field name="others"/>
                <filter name="filter_morning" string="Morning" domain="[('shift', '=', 'morning')]"/>
                <filter name="filter_day" string="Day" domain="[('shift', '=', 'day')]"/>
                <!--group by-->
                <group expand="0" string="Group By">
                    <filter string="Shift" name="group_by_shift" context="{'group_by':'shift'}"/>
                    <filter string="Class" name="group_by_Class" context="{'group_by':'Class'}"/>
                </group>
                <!--sidebar search-->
                <searchpanel>
                    <field name="Class" enable_counters="1" icon="fa-users" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!--Tree View-->
    <record model="ir.ui.view" id="tree_students_fees">
        <field name="name">Monthly Fees</field>
        <field name="model">students_fees</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_name"/>
                <field name="shift"/>
                <field name="Class"/>
                <field name="section"/>
                <field name="roll"/>
                <field name="guardians" widget="many2one_avatar_user"/>
                <field name="submit_date"/>
                <field name="amount"/>
                <field name="deduction" optional="hide"/>
                <field name="total_amount"/>
                <field name="due" optional="hide"/>
                <field name="exam_fee"/>
                <field name="auditorium_fee" optional="hide"/>
                <field name="others" optional="hide"/>
                <field name="activity_ids" widget="list_activity"/>
            </tree>
        </field>
    </record>

    <!--Kanban View-->
    <record id="kanban_students_fees" model="ir.ui.view">
        <field name="name">Monthly Fees</field>
        <field name="model">students_fees</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="student_name"/>
                <field name="shift"/>
                <field name="Class"/>
                <field name="section"/>
                <field name="roll"/>
                <field name="submit_date"/>
                <field name="amount"/>
                <field name="deduction"/>
                <field name="total_amount"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="row mb4">
                                    <div class="col-4">
                                        <field name="student_name"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="shift"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="Class"/>
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-4">
                                        <field name="section"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="roll"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="submit_date"/>
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-4">
                                        <field name="amount"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="deduction"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="total_amount"/>
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-4">
                                        <field name="due"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="exam_fee"/>
                                    </div>
                                    <div class="col-4">
                                        <field name="auditorium_fee"/>
                                    </div>
                                </div>
                                <div class="row mb4">
                                    <div class="col-4">
                                        <field name="others"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--Create Form-->
    <record model="ir.ui.view" id="form_students_fees">
        <field name="name">Monthly Fees</field>
        <field name="model">students_fees</field>
        <field name="arch" type="xml">
            <form>
<!--                <header>-->
<!--                    <button name="action_do_something" type="object" string="Click"/>-->
<!--                </header>-->
                <sheet>
                    <group>
                        <group>
                            <field name="student_name" default_focus="1"/>
                            <field name="shift"/>
                            <field name="Class"/>
                            <field name="section"/>
                            <field name="roll"/>
                        </group>
                        <group>
                            <field name="guardians"/>
                            <field name="submit_date"/>
                            <field name="amount"/>
                            <field name="deduction"/>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <!--notebook-->
                    <notebook>
                        <page string="Additional Charge" name="additional">
                            <group>
                                <field name="exam_fee"/>
                                <field name="auditorium_fee"/>
                                <field name="others"/>
                            </group>
                        </page>
                        <page string="Due" name="due">
                            <group>
                                <field name="due"/>
                                <field name="test"/>
                                <button name="action_for_accept" type="object" icon="fa-check" data-hotkey="A"/>
                                <button name="action_for_cancel" type="object" icon="fa-times" data-hotkey="C"/>
                                <field name="html" placeholder="Enter your comment here.." options="{'collaborative': true, 'resizable': true}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!--  chatter    -->
                <div class="oe_chatter">
                    <field name="activity_ids"/>
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_students_fees" model="ir.actions.act_window">
        <field name="name">Student Fees</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">students_fees</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New!
            </p>
        </field>
    </record>

    <menuitem
            id="submenu_students_fees_view"
            name="Fees"
            parent="submenu_students_fees"
            action="action_students_fees"
            sequence="20"
    />

</odoo>